---
import { getCollection } from "astro:content";

const allPortfolioEntries = await getCollection("portfolios");

// перенаправление на первое доступное резюме
if (allPortfolioEntries.length > 0) {
    const redirectUrl = `${import.meta.env.BASE_URL}${
        allPortfolioEntries[0].data.url
    }`;
    return Astro.redirect(redirectUrl);
} else {
    return Astro.redirect(`${import.meta.env.BASE_URL}about-me`);
}
