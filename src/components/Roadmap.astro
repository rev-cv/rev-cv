---
const { roadmap } = Astro.props;
---

<div class="roadmap container">
    <h2 class="roadmap__title">Hard Skill Roadmap</h2>

    {
        roadmap?.map((item: string) => {
            return <div class="roadmap__item">{item}</div>;
        })
    }
</div>

